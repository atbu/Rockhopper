<Window x:Class="Rockhopper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rockhopper"
        mc:Ignorable="d"
        Title="Rockhopper" Height="450" Width="800">
    
        <StackPanel>
            <DockPanel>
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="_Repository">
                        <MenuItem Header="_Open"
                                  Click="RepositoryOpenClicked" />
                    </MenuItem>
                </Menu>
                <StackPanel></StackPanel>
            </DockPanel>
            
            <TextBlock x:Name="RepositoryBlock" />
            <TextBlock x:Name="HEADBlock" />
        </StackPanel>
    
</Window>
