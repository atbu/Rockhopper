<Window x:Class="Rockhopper.UI.Dialogs.BranchCheckoutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Rockhopper.UI"
        mc:Ignorable="d"
        Title="Checkout"
        Height="135"
        Width="250"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock Text="Branch to checkout:" Margin="5"/>
            <TextBox x:Name="BranchTextBox" Margin="5" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5" >
                <Button Content="Cancel" Click="CancelButton_Click" Width="50" />
                <Button Content="OK" Click="OKButton_Click" Width="50" Margin="5,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
