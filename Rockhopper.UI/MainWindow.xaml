<Window x:Class="Rockhopper.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rockhopper"
        mc:Ignorable="d"
        Title="Rockhopper" Height="450" Width="800">
    
        <StackPanel>
            <DockPanel>
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="_Repository">
                        <MenuItem Header="_Open"
                                  Click="RepositoryOpenClicked" />
                    </MenuItem>
                </Menu>
                <StackPanel></StackPanel>
            </DockPanel>
            
            <StackPanel Margin="15">
                <TextBlock x:Name="RepositoryBlock" Text="{Binding CurrentRepository.Path}"/>
                <TextBlock x:Name="HEADBlock" Text="{Binding HEAD}"/>
                <TextBlock x:Name="BranchesBlock" />
                
                <TextBox x:Name="BranchCheckerBox" Text="{Binding BranchNameToCheck}" />
                <Button x:Name="CheckBranchButton" Click="CheckWhetherBranchExists" IsEnabled="False">Check Branch</Button>
                <Button x:Name="CheckOutBranchButton" Click="CheckoutBranch" IsEnabled="False">Checkout Branch</Button>
            </StackPanel>
        </StackPanel>
    
</Window>
